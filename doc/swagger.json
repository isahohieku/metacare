                            "default": "gender"
                        }
                    },
                    {
                        "name": "order",
                        "in": "query",
                        "description": "Return result in either ascending or descending order. 1 is Ascending and -1 is Descending",
                        "required": true,
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "1",
                                "-1"
